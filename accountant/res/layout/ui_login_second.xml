<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_regist_first"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/user_bg_color"
    android:orientation="vertical"
    android:visibility="visible" >
	<include 
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
	    layout="@layout/top_head"
	    />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bkg"
        android:gravity="center"
        android:layout_margin="20.0dip"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/txt_nickname"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="您的姓名"
            android:singleLine="true"
            android:textColor="@color/no_hint_color"
            android:textColorHint="@color/hint_color"
            android:textSize="16.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_check_nickname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="5.0dip"
        android:textColor="@color/text_color"
        android:textSize="16.0sp"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bkg"
        android:gravity="center"
        android:layout_margin="20.0dip"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/txt_email"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="您的手机号码"
            android:inputType="textEmailAddress"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:singleLine="true"
            android:textColor="@color/no_hint_color"
            android:textColorHint="@color/hint_color"
            android:textSize="16.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_check_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="5.0dip"
        android:textColor="@color/text_color"
        android:textSize="16.0sp"
        android:visibility="gone" />

    <Button
        android:id="@id/btn_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/btn_reg"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="20.0sp" />
</LinearLayout>